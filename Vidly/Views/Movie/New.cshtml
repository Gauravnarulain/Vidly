@model Vidly.ViewModel.MovieViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>&nbsp;</div>
<div>&nbsp;</div>
@Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
<h2>New</h2>
@using (Html.BeginForm("create", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Title)
        @Html.TextBoxFor(m => m.Movie.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.Movie.Title, null,new {@class="bg bg-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @class = "form-control", type = "date" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genre, "Id", "Title"), "Select Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.Movie.GenreId, null, new { @class = "bg bg-danger" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}
